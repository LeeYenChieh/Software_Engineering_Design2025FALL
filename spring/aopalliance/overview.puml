@startuml overview
skinparam linetype ortho

interface Advice{

}

interface Interceptor{
--
卡在Invocation執行的中間
決定要不要修改參數或者修改回傳值
}

Advice <|-- Interceptor

interface Jointpoint{
    + proceed(): Object
    + getThis(): Object
    --
    proceed可以讓method繼續跑
}

interface Invocation{
    + getArguments(): Object[]
--
把「函式呼叫」這個動作封裝成的物件
}

Jointpoint <|-- Invocation

interface MethodInterceptor{
    + invoke(MethodInvocation): Object
    --
    卡在MethodInvocation執行之間
    決定在哪些部分執行使用者定義的aspect的advice
}

interface MethodInvocation{
    + getMethod(): Method
}

Interceptor <|-- MethodInterceptor
Invocation <|-- MethodInvocation


interface ConstructorInterceptor{
    + construct(ConstructorInvocation): Object
}

interface ConstructorInvocation{
    + getConstructor(): Constructor
}

Interceptor <|-- ConstructorInterceptor
Invocation <|-- ConstructorInvocation

MethodInterceptor --> MethodInvocation
ConstructorInterceptor --> ConstructorInvocation
@enduml